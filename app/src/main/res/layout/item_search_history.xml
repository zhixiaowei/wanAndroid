<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/qb_px_10"
    android:id="@+id/item_history_layout"
    android:paddingStart="@dimen/qb_px_20"
    android:focusable="false"
    >

    <TextView
        android:id="@+id/item_history_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/qb_px_15"
        android:focusable="false"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/item_history_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/qb_px_10"
        android:focusable="false"
        android:background="@android:drawable/ic_delete"
        >

    </ImageView>
</LinearLayout>