<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.huangxiaowei.wanandroid.ui.view.SlideLayout
        android:id="@+id/slideLayout"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:slideDirection="fromRight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_70"
            android:orientation="vertical"
            android:padding="@dimen/qb_px_10">

            <TextView
                android:id="@+id/todo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/qb_px_20"
                tools:text="标题"/>

            <TextView
                android:id="@+id/todo_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/qb_px_10"
                android:textSize="@dimen/qb_px_15"
                tools:text="内容"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/todoFinishBtn"
                android:background="#008577"
                android:layout_width="@dimen/qb_px_80"
                android:layout_height="@dimen/qb_px_70"
                android:gravity="center"
                android:text="已完成"/>

            <Button
                android:id="@+id/todoDeleteBtn"
                android:background="@android:color/holo_red_light"
                android:layout_width="@dimen/qb_px_80"
                android:layout_height="@dimen/qb_px_70"
                android:gravity="center"
                android:text="删除"/>

        </LinearLayout>
    </com.huangxiaowei.wanandroid.ui.view.SlideLayout>


</RelativeLayout>
